<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="13dp"
            android:id="@+id/imageflecha"
            android:src="@drawable/flecha"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:layout_marginLeft="53dp"
            android:layout_marginTop="16dp"
            android:id="@+id/txtNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="miguel_sanchez_03"/>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:id="@+id/linerla"
            android:layout_marginLeft="320dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/llamada"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/mensaje"/>
        </LinearLayout>

        <SearchView

            android:id="@+id/searchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linerla"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:iconifiedByDefault="false"
            android:queryHint="Buscar" />

        <ImageView
            android:id="@+id/image1"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/searchat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hola"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/searchat"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/virgi"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/searchat"
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:src="@drawable/angel"/>

        <ImageView
            android:id="@+id/image4"
            android:layout_marginLeft="309dp"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/searchat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rober"/>
        <TextView
            android:layout_below="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensaje"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/mensaje"
            android:layout_marginLeft="300dp"
            android:layout_below="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Solicitudes"
            android:textSize="20dp"/>

        <ListView
            android:layout_below="@+id/mensaje"
            android:id="@+id/Cratos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>

